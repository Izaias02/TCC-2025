generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

///////////////////////
// TABELAS ORIGINAIS //
///////////////////////

model Usuario {
  id         Int      @id @default(autoincrement())
  nome       String
  email      String   @unique
  senha      String
}

model Medico {
  id            Int    @id @default(autoincrement())
  nome          String
  especialidade String
}

model Consulta {
  id        Int      @id @default(autoincrement())
  data      DateTime
  usuarioId Int
  medicoId  Int
}

model Agendamento {
  id         Int      @id @default(autoincrement())
  usuarioId  Int
  medicoId   Int
  consultaId Int
  status     String   @default("pendente")
  criadoEm   DateTime @default(now())
}

model Disponibilidade {
  id        Int      @id @default(autoincrement())
  medicoId  Int
  dia       String
  horario   String
}

//////////////////////////////
// TABELAS NOVAS QUE PEDIU //
//////////////////////////////

model administradores {
  id     Int    @id @default(autoincrement())
  login  String
  senha  String
}

model medicos {
  id        Int     @id @default(autoincrement())
  nome      String
  email     String  @unique
  senha     String
  crm       String?
  consultas consultas[]
}

model pacientes {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senha     String
  telefone  String?
  consultas consultas[]
}

model consultas {
  id           Int      @id @default(autoincrement())
  paciente_id  Int
  medico_id    Int
  data_horario DateTime
  status       String   @default("agendada")

  medico    medicos   @relation(fields: [medico_id], references: [id])
  paciente  pacientes @relation(fields: [paciente_id], references: [id])
}

model relatorios_medicos {
  id          Int      @id @default(autoincrement())
  paciente_id Int
  medico_id   Int
  texto       String
  data        DateTime @default(now())
}
